<!-- Left Panel -->
<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">
        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="#">
                    <a href="/"><i class="menu-icon fa ti-home"></i>Inicio </a>
                </li>
                  <li class="active">
                     
                        <a href="/listarUsuarios"><i class="menu-icon fa fa-list"></i>Lista de Usuarios</a>
                    </li>

                <li class="#">
                    <a href="/registrar"><i class="menu-icon fa ti-plus"></i>Registrar</a>
                </li>
                
                <li class="#">
                    <a href="/salir"><i class="menu-icon fa ti-power-off"></i>Salir</a>
                </li>
                <!-- /.menu-title -->



            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </nav>
    
</aside>
<!-- /#left-panel -->
<!-- Right Panel -->

<div id="right-panel" class="right-panel" >
    <!-- Header-->
    <header id="header" class="header">
        <div class="top-left">
            <div class="navbar-header">
                <a class="navbar-brand">
                    <h3 style="font-family: serif; color: #ffffff;">HeartBeatApp</h3>
                </a>
                <a class="navbar-brand hidden" href="./"><img src="images/logo2.png" alt="Logo"></a>
                <a id="menuToggle" class="menutoggle"><i class="fa fa-bars"></i></a>
            </div>
        </div>
        <div class="top-right">
            <div class="header-menu">
                <div class="header-left">



                    
                <div class="user-area dropdown float-right">
                    <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        <img class="user-avatar rounded-circle" src="images/admin.webp" alt="User Avatar">
                    </a>

                    <div class="user-menu dropdown-menu">
                        <a class="nav-link" href="/salir"><i class="fa fa-power -off"></i>Salir</a>
                    </div>
                </div>

            </div>
        </div>
    </header>
    <!-- /#header -->
    <!-- Content -->

    <div class="content">
        <div class="animated fadeIn">


            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header" style="background-color: #fa1414; color: #ffffff;">
                            <strong>Lista de usuarios</strong>
                        </div>
                        <div class="card-body card-block">
                            <!--tabla de datos-->
                            <table id="example"  class="table" style="width:100%">
                                <thead>
                                   
                                    <tr>
                                        <th>Nombres</th>
                                        <th>Apelidos</th>
                                        <th>Telefono</th>
                                    </tr>
                                  
                                </thead>
                               
                                <tbody>
                                     {{#each usuarios}}
                                    <tr>
                                        <td>{{nombres}}</td>
                                        <td>{{apellidos}}</td>
                                        <td>{{telefono}}</td>
                                    </tr>
                                       {{/each }}
                                       
                                   
                            </table>
                            <!--tabla de datos end-->
                        </div>

                    </div>



                </div>

            </div>



        </div><!-- .animated -->
    </div><!-- .content -->
</div>
