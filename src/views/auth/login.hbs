
<div class="login-form">    
    <form method="POST" action="/auth" >
        <center>
            <div class="avatar"><img src="/images/1142172.png"></div>
        </center>
		
        <h4 class="modal-title">HeartbeatApp</h4>
        <h5>Iniciar Sesion</h5>
        
        <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fa fa-user"></i></span>
            </div>
            <input type="text" class="form-control" name="email" placeholder="Escribe tu email" required>
        </div>

        <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock"></i></span>
            </div>
            <input type="password" class="form-control" name="password" placeholder="Escribe tu contraseña" required>
            <input type="hidden" name="token" id="token" value="">
        </div>

      
        <div class="form-group small clearfix">
            {{#if error}}
			<div class="container">
				<div class="alert alert-danger" role="alert">
					{{error}}
				</div>
			</div>
			{{/if}}
            <a href="#" onclick="recorverPass()" class="forgot-link"  data-toggle="modal" data-target="#modelId">Olvide mi contraseña</a>
        </div> 
        
        <button class="btn btn-danger btn-block btn-lg" type="button" id="btnSubmit" style="display:none">
            Iniciar Sesion
        </button>
        <button class="btn btn-danger btn-block btn-lg"  onclick="initFirebaseMessagingRegistration()">
            Iniciar Sesion
        </button>

                  
    </form>			
   
</div>
